<div class="row">
  <hr/><h1>User Registration</h1><hr/>
  <div class="panel">
    User Registration
    <%= form_for @user do |f| %>
    <%= f.text_field :name, placeholder: 'Name', size: "60x60" %></br></br>
    <%= f.email_field :email, placeholder: 'Email', size: "20x30" %></br></br>
    <%= f.password_field :password, placeholder: 'Password', size: "20x30" %></br></br>
    <%= f.submit "Register" %>
    <% end %>
  </div>
</div>
