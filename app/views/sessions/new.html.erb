<div class="row text-center">
  <hr/><h1>EmailService</h1>
  <h2>Welcome, Please sign or Register</h2><hr/>
</div>
<div class="row text-center">
  <div class="large-6 columns panel">
    <%= form_for(@user, url: '/login') do |f| %>
      <%= f.label :email %><br>
      <%= f.email_field :email %><br>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
      <%= f.submit "Login", class: "tiny round info button" %>
    <% end %><br>
  </div>
  <div class="large-6 columns">
    <%= link_to "Register", new_user_path, class: "medium round info button"%>
  </div>
</div>